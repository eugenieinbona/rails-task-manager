<div class="task-content">
  <h2><%= @task.title %></h2>
  <p class="details"><%= @task.details %></p>
  <% if @task.completed %>
  <p> <i class="fa fa-check-square-o"></i> This task is completed </p>
  <% else %>
  <p> <i class="fa fa-square-o"></i> This task is not completed yet </p>
  <% end %>
  </div>
  <%= link_to('Edit task', edit_task_path) %>
  <%= link_to 'Delete', task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <%= link_to('Back to Tasks List', tasks_path) %>
</div>
